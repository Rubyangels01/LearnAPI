<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activity.DetailBill_Activity"
    android:background="@drawable/background">


    <ImageButton
        android:id="@+id/back_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="29dp"
        android:layout_toEndOf="@+id/tvTitle"

        android:src="@drawable/home_icon"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoá đơn giao dịch"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/rlTransactionInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_rounded_corners"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivMerchantLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_zalopay" />

        <TextView
            android:id="@+id/tvMerchantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivMerchantLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="GIA TÀI CỦA NGOẠI"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMerchantName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="110.000đ"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOrderInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAmount"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="28dp"
            android:text="CGV LÊ VĂN VIỆT"
            android:textAlignment="center"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvshowdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrderInfo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="28dp"
            android:text="04 tháng 08, 2024 15:15"
            android:textAlignment="center"
            android:textSize="14sp" />










    </RelativeLayout>

    <TextView
        android:id="@+id/tvPaymentMethodTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phương thức thanh toán"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/rlTransactionInfo"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvSeeAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZALO Pay"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/rlTransactionInfo"
        android:layout_marginTop="16dp"/>

    <ListView
        android:id="@+id/lvordered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSeeAll"/>



</RelativeLayout>
