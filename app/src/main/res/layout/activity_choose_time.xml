<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/img_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="-1dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/img_movie" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_below="@id/img_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >
            <TextView
                android:id="@+id/name_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/img_movie"
                android:text="LẬT MẶT 7: MỘT ĐIỀU ƯỚC"

                android:textColor="@color/white"
                android:textSize="25sp"
                android:fontFamily="@font/aldrich"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Healing, Family"
                android:fontFamily="@font/aldrich"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/time"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/watch_icon"
                android:drawablePadding="5dp"
                android:text="138 phút"
                android:fontFamily="@font/aldrich"
                android:textColor="@color/gray"/>

        </LinearLayout>
        <View
            android:layout_below="@id/layout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_below="@id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/gray_back"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:text="10"
                    android:fontFamily="@font/aldrich"
                    android:paddingTop="7dp"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:text="Fr"
                    android:fontFamily="@font/aldrich"
                    android:paddingTop="7dp"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/view2"
            android:layout_below="@id/layout2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:id="@+id/layout3"
            android:layout_below="@id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Time"

                android:fontFamily="@font/aldrich"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:40"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/aldrich"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:background="@color/green"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:00"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/aldrich"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:background="@color/gray_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:25"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/aldrich"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:background="@color/gray_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15:00"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/aldrich"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:background="@color/gray_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16:20"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/aldrich"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:background="@color/gray_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17:45"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/aldrich"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:background="@color/gray_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19:00"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/aldrich"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:background="@color/gray_back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21:00"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/aldrich"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:textSize="16sp"
                        android:background="@color/gray_back"/>

                </LinearLayout>
            </HorizontalScrollView>





        </LinearLayout>

        <Button
            android:id="@+id/btn_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout3"
            android:layout_marginTop="180dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/aldrich"
            android:text="Booking" />








        <!-- Các thành phần khác của màn hình -->

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
